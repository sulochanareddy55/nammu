def add_fn
puts "enter the numbers you want to add"
@n1=gets.chomp
@n2=gets.chomp
@n1+@n2==@answer
puts "the sum is #{@answer}"
end
def sun_fn
puts "enter the numbers you want to subtract"
@n1=gets.chomp
@n2=gets.chomp
@n1-@n2==@answer
puts "the difference is #{@answer}"
end
def mul_fn
puts "enter the numbers you want to multiply"
@n1=gets.chomp
@n2=gets.chomp
@n1*@n2==@answer
puts "the multiplication result is #{@answer}"
end
def div_fn
puts "enter the numbers you want to divide"
@n1=gets.chomp
@n2=gets.chomp
@n1/@n2==@answer
puts "the division result is #{@answer}"
end
puts "would you like to [add], [subtract], [multiply], or [divide]?"
response=gets.chomp
if response=="add" then
add_fn
end
if response=="subtract" then
sub_fn
end
if response=="multiply" then
mul_fn
end
if response=="divide" then
div_fn
end
